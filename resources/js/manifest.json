{
  "name": "Nags-a-lot",
  "version": "0.0.1",
  "browser_action": {
      "default_title": "Show the popup",
      "default_popup": "popup.html",
      "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
      }

  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
          "tabs",
          "storage",
          "webRequestBlocking",
          "webRequest",
          "*://*/*"
        ],
 "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["nagsalot.js", "content.js"],
      "run_at": "document_end",
      "css": ["nagsalot.css"]
    }
  ],
  "web_accessible_resources" : [
  	"opt-out.html"
  ],
  "chrome_url_overrides": {
    "newtab": "new-tab.html"
  },
  "background": {
    "scripts": ["nagsalot.js", "background.js"],
    "persistent": true
  },
  "manifest_version": 2
}

