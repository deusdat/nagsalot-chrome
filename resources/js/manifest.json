{
  "name": "Nags-a-lot",
  "version": "1.0.0",
  "browser_action": {
      "default_title": "Manage this site",
      "default_popup": "popup.html",
      "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
      }

  },
  "description": "An extention that nags you while you surf. It makes sure you are intentional about your web useage.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
          "tabs",
          "storage",
          "webRequestBlocking",
          "webRequest",
          "*://*/*"
        ],
 "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["nagsalot.js", "content.js"],
      "run_at": "document_end",
      "css": ["nagsalot.css"]
    }
  ],
  "web_accessible_resources" : [
  	"opt-out.html",
  	"nope.html",
  	"nope.png",
  	"top-hat1-small.png"
  ],
  "background": {
    "scripts": ["nagsalot.js", "background.js"],
    "persistent": true
  },
  "manifest_version": 2
}

